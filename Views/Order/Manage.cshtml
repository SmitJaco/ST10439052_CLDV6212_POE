@model IEnumerable<ST10439052_CLDV_POE.Models.Order>

@{
    ViewData["Title"] = "Manage Orders";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-cog"></i> Manage Orders</h2>
        <div>
            <span class="badge bg-info">Total Orders: @Model.Count()</span>
            <span class="badge bg-warning ms-2">Pending: @Model.Count(o => o.Status == "Submitted" || o.Status == "Processing")</span>
        </div>
    </div>

    @if (Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Order ID</th>
                        <th>Customer</th>
                        <th>Product</th>
                        <th>Quantity</th>
                        <th>Order Date</th>
                        <th>Total Price</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model)
                    {
                        <tr>
                            <td><code>@order.OrderId.Substring(0, 8)...</code></td>
                            <td>@order.Username</td>
                            <td>@order.ProductName</td>
                            <td>@order.Quantity</td>
                            <td>@order.OrderDate.ToString("MMM dd, yyyy HH:mm")</td>
                            <td><strong>@order.TotalPrice.ToString("C")</strong></td>
                            <td>
                                <span class="badge bg-@GetStatusBadgeClass(order.Status)">@order.Status</span>
                            </td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-action="Edit" asp-route-id="@order.RowKey" class="btn btn-sm btn-outline-primary">
                                        <i class="fas fa-edit"></i> Edit Status
                                    </a>
                                    <a asp-action="Details" asp-route-id="@order.RowKey" class="btn btn-sm btn-outline-info">
                                        <i class="fas fa-eye"></i> Details
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info text-center">
            <i class="fas fa-info-circle fa-3x mb-3"></i>
            <h4>No orders found</h4>
            <p>There are no orders in the system.</p>
        </div>
    }
</div>

@functions {
    string GetStatusBadgeClass(string status)
    {
        return status?.ToLower() switch
        {
            "submitted" => "primary",
            "processing" => "info",
            "processed" => "warning",
            "completed" => "success",
            "cancelled" => "danger",
            _ => "secondary"
        };
    }
}

