@model IEnumerable<ST10439052_CLDV_POE.Models.Order>

@{
    ViewData["Title"] = "My Orders";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-shopping-bag"></i> My Orders</h2>
        <a asp-controller="Product" asp-action="Index" class="btn btn-primary">
            <i class="fas fa-shopping-cart"></i> Continue Shopping
        </a>
    </div>

    @if (Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Order ID</th>
                        <th>Product</th>
                        <th>Quantity</th>
                        <th>Order Date</th>
                        <th>Total Price</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model)
                    {
                        <tr>
                            <td><code>@order.OrderId.Substring(0, 8)...</code></td>
                            <td>@order.ProductName</td>
                            <td>@order.Quantity</td>
                            <td>@order.OrderDate.ToString("MMM dd, yyyy")</td>
                            <td><strong>@order.TotalPrice.ToString("C")</strong></td>
                            <td>
                                <span class="badge bg-@GetStatusBadgeClass(order.Status)">@order.Status</span>
                            </td>
                            <td>
                                <a asp-action="Details" asp-route-id="@order.RowKey" class="btn btn-sm btn-outline-primary">
                                    <i class="fas fa-eye"></i> Details
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info text-center">
            <i class="fas fa-shopping-bag fa-3x mb-3"></i>
            <h4>No orders found</h4>
            <p>You haven't placed any orders yet.</p>
            <a asp-controller="Product" asp-action="Index" class="btn btn-primary">
                <i class="fas fa-shopping-cart"></i> Start Shopping
            </a>
        </div>
    }
</div>

@functions {
    string GetStatusBadgeClass(string status)
    {
        return status?.ToLower() switch
        {
            "submitted" => "primary",
            "processing" => "info",
            "processed" => "warning",
            "completed" => "success",
            "cancelled" => "danger",
            _ => "secondary"
        };
    }
}

