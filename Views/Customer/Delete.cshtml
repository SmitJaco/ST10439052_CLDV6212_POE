@model ST10439052_CLDV_POE.Models.Customer

@{
    ViewData["Title"] = "Delete Customer";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Delete Customer</h1>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Back to List
    </a>
</div>

<div class="alert alert-danger" role="alert">
    <h4 class="alert-heading">
        <i class="fas fa-exclamation-triangle"></i> Warning!
    </h4>
    <p class="mb-0">
        Are you sure you want to delete this customer? This action cannot be undone and will also remove all associated orders.
    </p>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header bg-danger text-white">
                <h5 class="mb-0">Customer Information to be Deleted</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <dl class="row">
                            <dt class="col-sm-4">Customer ID:</dt>
                            <dd class="col-sm-8">@Model.CustomerId</dd>
                            
                            <dt class="col-sm-4">First Name:</dt>
                            <dd class="col-sm-8">@Model.Name</dd>
                            
                            <dt class="col-sm-4">Last Name:</dt>
                            <dd class="col-sm-8">@Model.Surname</dd>
                            
                            <dt class="col-sm-4">Full Name:</dt>
                            <dd class="col-sm-8"><strong>@Model.Name @Model.Surname</strong></dd>
                        </dl>
                    </div>
                    <div class="col-md-6">
                        <dl class="row">
                            <dt class="col-sm-4">Username:</dt>
                            <dd class="col-sm-8">@Model.Username</dd>
                            
                            <dt class="col-sm-4">Email:</dt>
                            <dd class="col-sm-8">@Model.Email</dd>
                        </dl>
                    </div>
                </div>
                
                <div class="row mt-3">
                    <div class="col-12">
                        <dl class="row">
                            <dt class="col-sm-2">Shipping Address:</dt>
                            <dd class="col-sm-10">@Model.ShippingAddress</dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h6 class="mb-0">Impact Analysis</h6>
            </div>
            <div class="card-body">
                <div class="text-center">
                    <div class="mb-3">
                        <h4 class="text-danger">@ViewBag.OrderCount</h4>
                        <small class="text-muted">Orders will be deleted</small>
                    </div>
                    <div class="mb-3">
                        <h4 class="text-warning">@ViewBag.TotalSpent?.ToString("C")</h4>
                        <small class="text-muted">Revenue will be lost</small>
                    </div>
                    <div>
                        <h4 class="text-info">@ViewBag.CustomerSince?.ToString("MMM dd, yyyy")</h4>
                        <small class="text-muted">Customer since</small>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="card mt-3">
            <div class="card-header">
                <h6 class="mb-0">Customer Information</h6>
            </div>
            <div class="card-body">
                <p>
                    <strong>Created:</strong><br />
                    <small class="text-muted">@Model.Timestamp?.ToString("MMM dd, yyyy HH:mm")</small>
                </p>
                <p>
                    <strong>Full Customer ID:</strong><br />
                    <small class="text-muted font-monospace">@Model.CustomerId</small>
                </p>
            </div>
        </div>
    </div>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="RowKey" />
    <input type="hidden" asp-for="PartitionKey" />
    <input type="hidden" asp-for="ETag" />
    <input type="hidden" asp-for="Timestamp" />
    
    <div class="d-flex justify-content-between">
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-times"></i> Cancel
        </a>
        <button type="submit" class="btn btn-danger">
            <i class="fas fa-trash"></i> Delete Customer
        </button>
    </div>
</form>
