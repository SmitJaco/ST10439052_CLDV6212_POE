@{
    ViewData["Title"] = "Uploaded Files";
    var uploads = ViewBag.Uploads as List<string> ?? new List<string>();
    var proofs = ViewBag.PaymentProofs as List<string> ?? new List<string>();
}

<div class="container mt-4">
    <h2><i class="fas fa-folder-open"></i> Uploaded Files</h2>
    <p class="text-muted">Admin view of files stored in Azure Blob Storage.</p>

    <div class="row">
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header">
                    <strong><i class="fas fa-upload"></i> General Uploads (@uploads.Count)</strong>
                </div>
                <div class="card-body">
                    @if (uploads.Any())
                    {
                        <ul class="list-group">
                            @foreach (var name in uploads)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <span class="text-truncate" style="max-width:70%">@name</span>
                                    <a class="btn btn-sm btn-outline-primary" asp-controller="Upload" asp-action="Download" asp-route-container="uploads" asp-route-name="@name">
                                        <i class="fas fa-download"></i> Download
                                    </a>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <div class="alert alert-info mb-0"><i class="fas fa-info-circle"></i> No files found.</div>
                    }
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header">
                    <strong><i class="fas fa-file-invoice-dollar"></i> Payment Proofs (@proofs.Count)</strong>
                </div>
                <div class="card-body">
                    @if (proofs.Any())
                    {
                        <ul class="list-group">
                            @foreach (var name in proofs)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <span class="text-truncate" style="max-width:70%">@name</span>
                                    <a class="btn btn-sm btn-outline-primary" asp-controller="Upload" asp-action="Download" asp-route-container="payment-proofs" asp-route-name="@name">
                                        <i class="fas fa-download"></i> Download
                                    </a>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <div class="alert alert-info mb-0"><i class="fas fa-info-circle"></i> No payment proof files found.</div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
