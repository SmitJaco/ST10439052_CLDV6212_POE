@{
    ViewData["Title"] = "Order Confirmation";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-success text-white text-center">
                    <h3 class="mb-0"><i class="fas fa-check-circle fa-2x"></i></h3>
                    <h4 class="mb-0">Order Confirmed!</h4>
                </div>
                <div class="card-body text-center">
                    <h5>Thank you for your order!</h5>
                    <p class="text-muted">Your order has been successfully placed and is being processed.</p>
                    <hr>
                    <div class="mt-4">
                        <a asp-controller="Order" asp-action="MyOrders" class="btn btn-primary me-2">
                            <i class="fas fa-list"></i> View My Orders
                        </a>
                        <a asp-controller="Product" asp-action="Index" class="btn btn-outline-primary">
                            <i class="fas fa-shopping-bag"></i> Continue Shopping
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

