@model ST10439052_CLDV_POE.Models.ViewModels.HomeViewModel

@{
    ViewData["Title"] = "Home";
}

<!-- Hero Section -->
<div class="hero-section">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h1 class="display-1">
                    <i class="fas fa-car"></i> TheJimnyHubOfAccesoriesForJimnys
                </h1>
                <p class="lead">Your ultimate destination for premium Suzuki Jimny accessories and modifications</p>
                <div class="d-flex justify-content-center gap-3">
                    <a asp-controller="Product" asp-action="Index" class="btn btn-light btn-lg">
                        <i class="fas fa-shopping-bag"></i> Shop Accessories
                    </a>
                    <a asp-controller="Customer" asp-action="Create" class="btn btn-outline-light btn-lg">
                        <i class="fas fa-user-plus"></i> Join Our Community
                    </a>
                    <a asp-controller="Home" asp-action="Contact" class="btn btn-outline-light btn-lg">
                        <i class="fas fa-envelope"></i> Contact Us
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Feature Cards Section -->
<div class="container my-5">
    <div class="row">
        <div class="col-12 text-center mb-5">
            <h2 class="display-4" style="color: var(--jimny-dark);">
                <i class="fas fa-star" style="color: var(--jimny-yellowgreen);"></i> Why Choose TheJimnyHub?
            </h2>
            <p class="lead" style="color: var(--jimny-blue);">Premium accessories designed specifically for your Suzuki Jimny</p>
        </div>
    </div>
    
    <div class="row g-4">
        <div class="col-lg-4 col-md-6">
            <div class="feature-card">
                <i class="fas fa-tools"></i>
                <h3>Premium Quality</h3>
                <p>All our accessories are built to withstand the toughest off-road adventures your Jimny will encounter.</p>
            </div>
        </div>
        <div class="col-lg-4 col-md-6">
            <div class="feature-card">
                <i class="fas fa-shipping-fast"></i>
                <h3>Fast Delivery</h3>
                <p>Quick shipping across the country so you can start customizing your Jimny without waiting.</p>
            </div>
        </div>
        <div class="col-lg-4 col-md-6">
            <div class="feature-card">
                <i class="fas fa-headset"></i>
                <h3>Expert Support</h3>
                <p>Our team of Jimny enthusiasts is here to help you choose the perfect accessories.</p>
            </div>
        </div>
        <div class="col-lg-4 col-md-6">
            <div class="feature-card">
                <i class="fas fa-shield-alt"></i>
                <h3>Warranty Included</h3>
                <p>All products come with comprehensive warranty coverage for your peace of mind.</p>
            </div>
        </div>
        <div class="col-lg-4 col-md-6">
            <div class="feature-card">
                <i class="fas fa-cog"></i>
                <h3>Easy Installation</h3>
                <p>Most accessories are designed for easy DIY installation with detailed instructions.</p>
            </div>
        </div>
        <div class="col-lg-4 col-md-6">
            <div class="feature-card">
                <i class="fas fa-users"></i>
                <h3>Community Driven</h3>
                <p>Join thousands of Jimny owners who trust us for their customization needs.</p>
            </div>
        </div>
    </div>
</div>

<!-- Stats Section -->
<div class="stats-section">
    <div class="container">
        <div class="row">
            <div class="col-12 text-center mb-4">
                <h2 class="display-5">TheJimnyHub by the Numbers</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-3 col-md-6">
                <div class="stat-item">
                    <span class="number">@Model.CustomerCount</span>
                    <span class="label">Happy Customers</span>
                </div>
            </div>
            <div class="col-lg-3 col-md-6">
                <div class="stat-item">
                    <span class="number">@Model.ProductCount</span>
                    <span class="label">Premium Products</span>
                </div>
            </div>
            <div class="col-lg-3 col-md-6">
                <div class="stat-item">
                    <span class="number">@Model.OrderCount</span>
                    <span class="label">Successful Orders</span>
                </div>
            </div>
            <div class="col-lg-3 col-md-6">
                <div class="stat-item">
                    <span class="number">100%</span>
                    <span class="label">Satisfaction Rate</span>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Action Buttons Section -->
<div class="container my-5">
    <div class="row g-4">
        <div class="col-lg-3 col-md-6">
            <a asp-controller="Customer" asp-action="Index" class="btn btn-primary btn-lg w-100 h-100 d-flex flex-column justify-content-center">
                <i class="fas fa-users fa-2x mb-2"></i>
                <span>Manage Customers</span>
                <small class="text-light">(@Model.CustomerCount total)</small>
            </a>
        </div>
        <div class="col-lg-3 col-md-6">
            <a asp-controller="Product" asp-action="Index" class="btn btn-success btn-lg w-100 h-100 d-flex flex-column justify-content-center">
                <i class="fas fa-box fa-2x mb-2"></i>
                <span>Browse Products</span>
                <small class="text-light">(@Model.ProductCount total)</small>
            </a>
        </div>
        <div class="col-lg-3 col-md-6">
            <a asp-controller="Order" asp-action="Index" class="btn btn-warning btn-lg w-100 h-100 d-flex flex-column justify-content-center">
                <i class="fas fa-shopping-cart fa-2x mb-2"></i>
                <span>View Orders</span>
                <small class="text-light">(@Model.OrderCount total)</small>
            </a>
        </div>
        <div class="col-lg-3 col-md-6">
            <a asp-controller="Upload" asp-action="Index" class="btn btn-info btn-lg w-100 h-100 d-flex flex-column justify-content-center">
                <i class="fas fa-upload fa-2x mb-2"></i>
                <span>Upload Files</span>
                <small class="text-light">(Document management)</small>
            </a>
        </div>
    </div>
</div>

<!-- Storage Initialization (if needed) -->
@if (Model.CustomerCount == 0 && Model.ProductCount == 0 && Model.OrderCount == 0)
{
    <div class="container">
        <div class="alert alert-warning">
            <h5><i class="fas fa-exclamation-triangle"></i> First Time Setup</h5>
            <p>Welcome to TheJimnyHub! It looks like this is your first time running the application. Click the button below to initialize Azure Storage and start building your Jimny accessories empire.</p>
            <form asp-action="InitializeStorage" method="post" style="display: inline;">
                <button type="submit" class="btn btn-warning">
                    <i class="fas fa-cog"></i> Initialize Azure Storage
                </button>
            </form>
        </div>
    </div>
}

<!-- Featured Products Section -->
<div class="container my-5">
    <div class="row">
        <div class="col-12">
            <h2 class="display-5 text-center mb-5" style="color: var(--jimny-dark);">
                <i class="fas fa-star" style="color: var(--jimny-yellowgreen);"></i> Featured Jimny Accessories
            </h2>
            
            @if (Model.FeaturedProducts.Any())
            {
                <div class="row justify-content-center">
                    @foreach (var product in Model.FeaturedProducts)
                    {
                        <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                            <div class="card h-100">
                                @if (!string.IsNullOrEmpty(product.ImageUrl))
                                {
                                    <img src="@product.ImageUrl" class="card-img-top" alt="@product.ProductName" style="height: 200px; object-fit: cover;">
                                }
                                else
                                {
                                    <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                                        <i class="fas fa-car fa-3x" style="color: var(--jimny-tan);"></i>
                                    </div>
                                }
                                <div class="card-body d-flex flex-column">
                                    <h5 class="card-title text-center" style="color: var(--jimny-dark);">@product.ProductName</h5>
                                    <p class="card-text small text-muted flex-grow-1 text-center">@(product.Description.Length > 80 ? product.Description.Substring(0, 80) + "..." : product.Description)</p>
                                    <div class="mt-auto text-center">
                                        <p class="card-text">
                                            <strong class="text-success h4">@product.Price.ToString("C")</strong>
                                        </p>
                                        <small class="text-muted">
                                            <i class="fas fa-boxes"></i> Stock: @product.StockAvailable
                                        </small>
                                    </div>
                                </div>
                                <div class="card-footer text-center" style="background: var(--jimny-white); border: none;">
                                    <a asp-controller="Product" asp-action="Edit" asp-route-id="@product.RowKey" class="btn btn-outline-primary btn-sm">
                                        <i class="fas fa-edit"></i> Edit
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="text-center">
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle fa-2x mb-3" style="color: var(--jimny-blue);"></i>
                        <h5>No accessories available yet</h5>
                        <p>Start building your Jimny accessories catalog by adding your first product!</p>
                        <a asp-controller="Product" asp-action="Create" class="btn btn-primary">
                            <i class="fas fa-plus"></i> Add First Accessory
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<!-- Call to Action Section -->
<div class="cta-section">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h2>Ready to Transform Your Jimny?</h2>
                <p class="lead mb-4">Join thousands of Jimny owners who trust TheJimnyHub for premium accessories</p>
                <div class="d-flex justify-content-center gap-3">
                    <a asp-controller="Product" asp-action="Create" class="btn btn-light btn-lg">
                        <i class="fas fa-plus"></i> Add New Accessory
                    </a>
                    <a asp-controller="Customer" asp-action="Create" class="btn btn-outline-light btn-lg">
                        <i class="fas fa-user-plus"></i> Add Customer
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
