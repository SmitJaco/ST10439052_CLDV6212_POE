@{
    ViewData["Title"] = "Customer Dashboard";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-12">
            <h2><i class="fas fa-user"></i> My Dashboard</h2>
            <p class="text-muted">Welcome back, @User.Identity?.Name!</p>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-subtitle mb-2">My Orders</h6>
                            <h2 class="mb-0">@ViewBag.OrderCount</h2>
                        </div>
                        <i class="fas fa-shopping-bag fa-3x opacity-75"></i>
                    </div>
                    <a asp-controller="Order" asp-action="MyOrders" class="btn btn-light btn-sm mt-2">
                        View All <i class="fas fa-arrow-right"></i>
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-warning text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-subtitle mb-2">Cart Items</h6>
                            <h2 class="mb-0">@ViewBag.CartItemCount</h2>
                        </div>
                        <i class="fas fa-shopping-cart fa-3x opacity-75"></i>
                    </div>
                    <a asp-controller="Cart" asp-action="Index" class="btn btn-light btn-sm mt-2">
                        View Cart <i class="fas fa-arrow-right"></i>
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-subtitle mb-2">Recent Orders</h6>
                            <h2 class="mb-0">@(((List<ST10439052_CLDV_POE.Models.Order>)ViewBag.RecentOrders).Count)</h2>
                        </div>
                        <i class="fas fa-clock fa-3x opacity-75"></i>
                    </div>
                    <a asp-controller="Order" asp-action="MyOrders" class="btn btn-light btn-sm mt-2">
                        View All <i class="fas fa-arrow-right"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-bolt"></i> Quick Actions</h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-4">
                            <a asp-controller="Product" asp-action="Index" class="btn btn-success btn-lg w-100">
                                <i class="fas fa-shopping-bag"></i> Shop Products
                            </a>
                        </div>
                        <div class="col-md-4">
                            <a asp-controller="Cart" asp-action="Index" class="btn btn-warning btn-lg w-100">
                                <i class="fas fa-shopping-cart"></i> View Cart (@ViewBag.CartItemCount)
                            </a>
                        </div>
                        <div class="col-md-4">
                            <a asp-controller="Order" asp-action="MyOrders" class="btn btn-info btn-lg w-100">
                                <i class="fas fa-list"></i> My Orders
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Orders -->
    @if (ViewBag.RecentOrders != null && ((List<ST10439052_CLDV_POE.Models.Order>)ViewBag.RecentOrders).Any())
    {
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header bg-info text-white">
                        <h5 class="mb-0"><i class="fas fa-history"></i> Recent Orders</h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Order ID</th>
                                        <th>Product</th>
                                        <th>Quantity</th>
                                        <th>Total</th>
                                        <th>Status</th>
                                        <th>Date</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var order in (List<ST10439052_CLDV_POE.Models.Order>)ViewBag.RecentOrders)
                                    {
                                        <tr>
                                            <td><code>@order.OrderId.Substring(0, 8)...</code></td>
                                            <td>@order.ProductName</td>
                                            <td>@order.Quantity</td>
                                            <td><strong>@order.TotalPrice.ToString("C")</strong></td>
                                            <td>
                                                <span class="badge bg-@GetStatusBadgeClass(order.Status)">@order.Status</span>
                                            </td>
                                            <td>@order.OrderDate.ToString("MMM dd, yyyy")</td>
                                            <td>
                                                <a asp-controller="Order" asp-action="Details" asp-route-id="@order.RowKey" class="btn btn-sm btn-outline-primary">
                                                    <i class="fas fa-eye"></i> Details
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <div class="mt-3 text-center">
                            <a asp-controller="Order" asp-action="MyOrders" class="btn btn-primary">
                                <i class="fas fa-list"></i> View All Orders
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info text-center">
            <i class="fas fa-info-circle fa-3x mb-3"></i>
            <h4>No orders yet</h4>
            <p>Start shopping to see your orders here!</p>
            <a asp-controller="Product" asp-action="Index" class="btn btn-primary">
                <i class="fas fa-shopping-bag"></i> Start Shopping
            </a>
        </div>
    }
</div>

@functions {
    string GetStatusBadgeClass(string status)
    {
        return status?.ToLower() switch
        {
            "submitted" => "primary",
            "processing" => "info",
            "processed" => "warning",
            "completed" => "success",
            "cancelled" => "danger",
            _ => "secondary"
        };
    }
}

