@{
    ViewData["Title"] = "Access Denied";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h3 class="mb-0"><i class="fas fa-exclamation-triangle"></i> Access Denied</h3>
                </div>
                <div class="card-body text-center">
                    <i class="fas fa-lock fa-4x text-danger mb-3"></i>
                    <h4>You do not have permission to access this resource.</h4>
                    <p class="text-muted">Please contact an administrator if you believe this is an error.</p>
                    <div class="mt-4">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
                            <i class="fas fa-home"></i> Go to Home
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

